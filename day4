makeup = ["Foundation","Concealer","Corrector","Brushes"]
while True:
    print("1. Add item")
    print("2. View all")
    print("3. Remove item")
    print("4. Exit")
    choice = int(input("Enter your choice:"))
    
    if choice == 1:
        item = input("Enter the item you want to add:")
        makeup.append(item)
        print(makeup)
        print("Item added successfullyâœ…")
    
    elif choice == 2:
       print("ğŸ“¦ Your Makeup Kit:")
       for i, item in enumerate(makeup, start=1):
            print(f"{i}. {item}")

    elif choice == 3:
        item = input("Enter the item you want to remove:")
        found = False 
        for items in makeup:
            if item.lower() == items.lower():
                found = True 
                makeup.remove(item)
            print(makeup)
            print("Item removed successfullyâœ…")
            break
        
        if not found:
            print("Item doesn't exist")

    elif choice == 4:
        print("Exiting the program!!..GoodByeğŸ‘‹ğŸ¼")
        
