for i in range(total):
        name = input("Enter the name of the book:")
        price = int(input("Enter the price of the book:"))
        books.append(Book(name,price))

print("\nBook Details:")
for book in books:
        book.show()
        print("-----")
        
dic = {}
for book in books:
      dic[book.name] = book.price 

