import time

def measure_time(func):
    def measuring(*args, **kwargs):
        start = time.perf_counter()
        result = func(*args, **kwargs)
        end = time.perf_counter()
        print(f"Total Execution Time: {end - start:.4f} seconds")
        return result
    return measuring


@measure_time
def countdown(n):
    for i in range(n, 0, -1):
        print(i)
        time.sleep(1)


countdown(5)

